<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.react.pnld.mappers.AdminMapper">

    <resultMap id="adminMap" type="com.react.pnld.model.Admin" >
        <id property="idAdmin" column="id_admin"/>
        <result property="username" column="nombre"/>
        <result property="password" column="clave"/>
    </resultMap>

    <select id="findByUsername" resultMap="adminMap" parameterType="String">
        SELECT * FROM pnld.admin  WHERE nombre = #{username}
    </select>

</mapper>